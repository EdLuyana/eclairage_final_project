{% extends 'base.html.twig' %}

{% block title %}{{ page_title ?? 'Choisir un magasin' }}{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="h3 mb-3">{{ page_title }}</h1>
    <p class="text-muted mb-4">
        Sélectionnez le magasin dans lequel vous travaillez actuellement.
    </p>

    <div class="row g-4">
        {% for location in locations %}
            <div class="col-12 col-md-6 col-lg-4">
                <a href="{{ path('user_set_location', { id: location.id }) }}"
                   class="text-decoration-none">
                    <div class="card shadow-sm border-0 text-center py-4">
                        <h2 class="h5 mb-1">{{ location.name }}</h2>
                        <p class="text-muted small mb-0">
                            Code : {{ location.code }}
                        </p>
                    </div>
                </a>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning">
                    Aucun magasin actif n'est configuré pour le moment.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
