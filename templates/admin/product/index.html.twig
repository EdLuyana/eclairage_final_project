{% extends 'base.html.twig' %}

{% block title %}{{ page_title ?? 'Produits' }}{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 mb-0">{{ page_title }}</h1>

        <div class="d-flex gap-2">
            <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary btn-sm">
                ← Dashboard
            </a>

            <a href="{{ path('admin_create_index') }}" class="btn btn-primary btn-sm">
                + Créer produit / fournisseur / etc.
            </a>

            <a href="{{ path('app_logout') }}" class="btn btn-outline-danger btn-sm">
                Déconnexion
            </a>
        </div>
    </div>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-sm py-2">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {# Filtres #}
    <form method="get" class="card mb-3 p-3">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-3">
                <label class="form-label">Fournisseur</label>
                <select name="supplier" class="form-select form-select-sm">
                    <option value="">Tous</option>
                    {% for supplier in suppliers %}
                        <option value="{{ supplier.id }}" {{ filters.supplier == supplier.id ? 'selected' : '' }}>
                            {{ supplier.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label">Collection</label>
                <select name="season" class="form-select form-select-sm">
                    <option value="">Toutes</option>
                    {% for season in seasons %}
                        <option value="{{ season.id }}" {{ filters.season == season.id ? 'selected' : '' }}>
                            {{ season.name }} {{ season.year }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label">Catégorie</label>
                <select name="category" class="form-select form-select-sm">
                    <option value="">Toutes</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}" {{ filters.category == category.id ? 'selected' : '' }}>
                            {{ category.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-6 col-md-2">
                <div class="form-check mt-4">
                    <input class="form-check-input" type="checkbox" value="1" id="filter_archived"
                           name="archived" {{ filters.archived ? 'checked' : '' }}>
                    <label class="form-check-label small" for="filter_archived">
                        Inclure archivés
                    </label>
                </div>
            </div>

            <div class="col-12 col-md-6 mt-2">
                <label class="form-label">Recherche (réf / nom / couleur)</label>
                <div class="input-group input-group-sm">
                    <input type="text"
                           name="q"
                           class="form-control"
                           placeholder="Rechercher..."
                           value="{{ filters.q }}">
                    <button class="btn btn-primary btn-sm" type="submit">
                        Filtrer
                    </button>
                    <a href="{{ path('admin_product_index') }}" class="btn btn-outline-secondary btn-sm">
                        Réinitialiser
                    </a>
                </div>
            </div>
        </div>
    </form>

    {# Tableau des produits #}
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-sm table-striped mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Fournisseur</th>
                            <th>Collection</th>
                            <th>Catégorie</th>
                            <th>Référence</th>
                            <th>Nom</th>
                            <th>Couleur</th>
                            <th>Code barre (base)</th>
                            <th class="text-end">Prix</th>
                            <th class="text-center">Archivé</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% if products is empty %}
                        <tr>
                            <td colspan="10" class="text-center text-muted py-3">
                                Aucun produit ne correspond à ces critères.
                            </td>
                        </tr>
                    {% else %}
                        {% for product in products %}
                            <tr class="{{ product.isArchived ? 'table-secondary' : '' }}">
                                <td>{{ product.supplier ? product.supplier.name : '-' }}</td>
                                <td>
                                    {% if product.season %}
                                        {{ product.season.name }} {{ product.season.year }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>{{ product.category ? product.category.name : '-' }}</td>
                                <td><code class="small">{{ product.reference }}</code></td>
                                <td>{{ product.name }}</td>
                                <td>{{ product.color ? product.color.name : '-' }}</td>
                                <td>
                                    {% if product.barcodeBase %}
                                        <code class="small">{{ product.barcodeBase }}</code>
                                    {% else %}
                                        <span class="text-muted small">-</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    {% if product.price is not null %}
                                        {{ product.price|number_format(2, ',', ' ') }} €
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    {% if product.isArchived %}
                                        <span class="badge bg-secondary">Oui</span>
                                    {% else %}
                                        <span class="badge bg-success">Non</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end flex-wrap gap-1">

                                        {# Mini fiche produit (popup) #}
                                        <button type="button"
                                                class="btn btn-outline-secondary btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#productModal_{{ product.id }}">
                                            Voir
                                        </button>

                                        {# Modifier #}
                                        <a href="{{ path('admin_product_edit', {id: product.id}) }}"
                                           class="btn btn-outline-primary btn-sm">
                                            Modifier
                                        </a>

                                        {# Archiver / Réactiver #}
                                        <form method="post"
                                              action="{{ path('admin_product_toggle_archive', {id: product.id}) }}"
                                              onsubmit="return confirm('{{ product.isArchived
                                                  ? 'Réactiver ce produit dans le catalogue ?'
                                                  : 'Archiver ce produit (il ne sera plus disponible dans les flux normaux) ?' }}');">
                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('toggle_archive_' ~ product.id) }}">
                                            {% if product.isArchived %}
                                                <button class="btn btn-success btn-sm">
                                                    Réactiver
                                                </button>
                                            {% else %}
                                                <button class="btn btn-warning btn-sm">
                                                    Archiver
                                                </button>
                                            {% endif %}
                                        </form>

                                        {# Braderie / Clear stock #}
                                        <form method="post"
                                              action="{{ path('admin_product_clearance', {id: product.id}) }}"
                                              onsubmit="return confirm('Envoyer ce produit en braderie et vider tous les stocks associés ? Cette action est irréversible.');">
                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('product_clearance_' ~ product.id) }}">
                                            <button class="btn btn-outline-danger btn-sm">
                                                Braderie
                                            </button>
                                        </form>

                                        {# Étiquettes #}
                                        <a href="{{ path('admin_product_labels', {id: product.id}) }}"
                                           class="btn btn-outline-primary btn-sm">
                                            Étiquettes
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {# Modales : mini fiche produit #}
    {% if products is not empty %}
        {% for product in products %}
            <div class="modal fade" id="productModal_{{ product.id }}" tabindex="-1"
                 aria-labelledby="productModalLabel_{{ product.id }}" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="productModalLabel_{{ product.id }}">
                                Détails produit – {{ product.reference }}
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                        </div>
                        <div class="modal-body small">
                            <dl class="row mb-0">
                                <dt class="col-4">Nom</dt>
                                <dd class="col-8">{{ product.name }}</dd>

                                <dt class="col-4">Fournisseur</dt>
                                <dd class="col-8">{{ product.supplier ? product.supplier.name : '-' }}</dd>

                                <dt class="col-4">Collection</dt>
                                <dd class="col-8">
                                    {% if product.season %}
                                        {{ product.season.name }} {{ product.season.year }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </dd>

                                <dt class="col-4">Catégorie</dt>
                                <dd class="col-8">{{ product.category ? product.category.name : '-' }}</dd>

                                <dt class="col-4">Couleur</dt>
                                <dd class="col-8">{{ product.color ? product.color.name : '-' }}</dd>

                                <dt class="col-4">Code barre (base)</dt>
                                <dd class="col-8">
                                    {% if product.barcodeBase %}
                                        <code>{{ product.barcodeBase }}</code>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </dd>

                                <dt class="col-4">Prix</dt>
                                <dd class="col-8">
                                    {% if product.price is not null %}
                                        {{ product.price|number_format(2, ',', ' ') }} €
                                    {% else %}
                                        -
                                    {% endif %}
                                </dd>

                                <dt class="col-4">Statut</dt>
                                <dd class="col-8">
                                    {% if product.isArchived %}
                                        Archivé
                                    {% else %}
                                        Actif
                                    {% endif %}
                                </dd>

                                <dt class="col-4">Créé le</dt>
                                <dd class="col-8">
                                    {{ product.createdAt ? product.createdAt|date('d/m/Y H:i') : '-' }}
                                </dd>
                            </dl>
                        </div>
                        <div class="modal-footer">
                            <a href="{{ path('admin_product_edit', {id: product.id}) }}"
                               class="btn btn-primary btn-sm">
                                Modifier
                            </a>
                            <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">
                                Fermer
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}

</div>
{% endblock %}
