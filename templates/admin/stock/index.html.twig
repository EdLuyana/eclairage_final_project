{% extends 'base.html.twig' %}

{% block title %}{{ page_title ?? 'Stock global' }}{% endblock %}

{% block body %}
<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 mb-0">{{ page_title }}</h1>
        <div class="d-flex gap-2">
            <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary btn-sm">
                ← Dashboard
            </a>
            <a href="{{ path('admin_product_index') }}" class="btn btn-outline-primary btn-sm">
                Tous les produits
            </a>
            <a href="{{ path('app_logout') }}" class="btn btn-outline-danger btn-sm">
                Déconnexion
            </a>
        </div>
    </div>

    {# Filtres #}
    <form method="get" class="card mb-3 p-3">
        <div class="row g-2 align-items-end">
            <div class="col-12 col-md-3">
                <label class="form-label">Fournisseur</label>
                <select name="supplier" class="form-select form-select-sm">
                    <option value="">Tous</option>
                    {% for supplier in suppliers %}
                        <option value="{{ supplier.id }}" {{ filters.supplier == supplier.id ? 'selected' : '' }}>
                            {{ supplier.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label">Collection</label>
                <select name="season" class="form-select form-select-sm">
                    <option value="">Toutes</option>
                    {% for season in seasons %}
                        <option value="{{ season.id }}" {{ filters.season == season.id ? 'selected' : '' }}>
                            {{ season.name }} {{ season.year }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label">Catégorie</label>
                <select name="category" class="form-select form-select-sm">
                    <option value="">Toutes</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}" {{ filters.category == category.id ? 'selected' : '' }}>
                            {{ category.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div class="col-12 col-md-6 mt-2">
                <label class="form-label">Recherche (réf / nom / couleur)</label>
                <div class="input-group input-group-sm">
                    <input type="text"
                           name="q"
                           class="form-control"
                           placeholder="Rechercher..."
                           value="{{ filters.q }}">
                    <button class="btn btn-primary btn-sm" type="submit">
                        Filtrer
                    </button>
                    <a href="{{ path('admin_stock_index') }}" class="btn btn-outline-secondary btn-sm">
                        Réinitialiser
                    </a>
                </div>
            </div>
        </div>
    </form>

    {# Tableau stock global #}
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-sm table-striped mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Fournisseur</th>
                            <th>Collection</th>
                            <th>Catégorie</th>
                            <th>Référence</th>
                            <th>Nom</th>
                            <th>Couleur</th>
                            <th>Taille</th>
                            {% for location in locations %}
                                <th class="text-center">
                                    {{ location.code }}
                                    <span class="d-block small text-muted">
                                        {{ location.name }}
                                    </span>
                                </th>
                            {% endfor %}
                            <th class="text-center">Total</th>
                            <th class="text-center">Ventes 30j</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% if rows is empty %}
                        <tr>
                            <td colspan="{{ 10 + locations|length }}" class="text-center text-muted py-3">
                                Aucun produit ne correspond à ces critères.
                            </td>
                        </tr>
                    {% else %}
                        {% for row in rows %}
                            {% set product = row.product %}
                            {% set size = row.size %}
                            {% set total = row.total %}
                            {% set sold = sales30d[product.id] ?? 0 %}

                            {# Préparation des données magasins pour la modale #}
                            {% set locData = [] %}
                            {% for location in locations %}
                                {% set code = location.code %}
                                {% set qty = row.perLocation[code] ?? 0 %}
                                {% set stock = row.stocks[code] ?? null %}
                                {% if stock and qty > 0 %}
                                    {% set locData = locData|merge([{
                                        code: code,
                                        name: location.name,
                                        stockId: stock.id,
                                        qty: qty
                                    }]) %}
                                {% endif %}
                            {% endfor %}

                            <tr>
                                <td>{{ product.supplier ? product.supplier.name : '-' }}</td>
                                <td>
                                    {% if product.season %}
                                        {{ product.season.name }} {{ product.season.year }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                                <td>{{ product.category ? product.category.name : '-' }}</td>
                                <td><code class="small">{{ product.reference }}</code></td>
                                <td>{{ product.name }}</td>
                                <td>{{ product.color ? product.color.name : '-' }}</td>
                                <td>
                                    {% if size %}
                                        {{ size.name }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>

                                {# Colonnes par magasin #}
                                {% for location in locations %}
                                    {% set code = location.code %}
                                    {% set qty = row.perLocation[code] ?? 0 %}
                                    <td class="text-center">
                                        {% if qty == 0 %}
                                            <span class="badge bg-danger">0</span>
                                        {% elseif qty == 1 %}
                                            <span class="badge bg-warning text-dark">1</span>
                                        {% else %}
                                            <span class="badge bg-success">{{ qty }}</span>
                                        {% endif %}
                                    </td>
                                {% endfor %}

                                {# Total toutes boutiques confondues pour cette taille #}
                                <td class="text-center">
                                    {% if total == 0 %}
                                        <span class="badge bg-danger">0</span>
                                    {% elseif total == 1 %}
                                        <span class="badge bg-warning text-dark">1</span>
                                    {% else %}
                                        <span class="badge bg-success">{{ total }}</span>
                                    {% endif %}
                                </td>

                                {# Ventes 30 derniers jours #}
                                <td class="text-center">
                                    {% if sold == 0 %}
                                        <span class="badge bg-secondary">0</span>
                                    {% elseif sold < 5 %}
                                        <span class="badge bg-info text-dark">{{ sold }}</span>
                                    {% else %}
                                        <span class="badge bg-primary">{{ sold }}</span>
                                    {% endif %}
                                </td>

                                {# Actions : bouton pour ouvrir la modale d'ajustement #}
                                <td class="text-center">
                                    {% if locData is not empty %}
                                        <button
                                            type="button"
                                            class="btn btn-outline-secondary btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#stockAdjustModal"
                                            data-product-ref="{{ product.reference }}"
                                            data-product-name="{{ product.name }}"
                                            data-size="{{ size ? size.name : '' }}"
                                            data-locations='{{ locData|json_encode|e('html_attr') }}'
                                        >
                                            Ajuster stock
                                        </button>
                                    {% else %}
                                        <span class="text-muted small">—</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

{# Modale d'ajustement de stock #}
<div class="modal fade" id="stockAdjustModal" tabindex="-1" aria-labelledby="stockAdjustModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" action="{{ path('admin_stock_decrement') }}">
                <div class="modal-header">
                    <h5 class="modal-title" id="stockAdjustModalLabel">Ajuster le stock</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-2">
                        Produit :
                        <strong class="js-adjust-product-label"></strong>
                    </p>

                    <div class="mb-3">
                        <label class="form-label">Magasin concerné</label>
                        <select name="stock_id" class="form-select" required>
                            {# Options injectées en JS #}
                        </select>
                        <div class="form-text js-adjust-max-info"></div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Quantité à retirer</label>
                        <input type="number"
                               name="quantity"
                               class="form-control"
                               min="1"
                               value="1"
                               required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Motif</label>
                        <select name="reason" class="form-select">
                            <option value="">Aucun / libre</option>
                            <option value="Perte / casse">Perte / casse</option>
                            <option value="Erreur inventaire">Erreur d'inventaire</option>
                            <option value="Vente interne">Vente interne (tarif préférentiel)</option>
                        </select>
                        <div class="form-text">
                            Le motif sera enregistré dans le journal des mouvements.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-danger">
                        Retirer du stock
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/admin_stock.js') }}"></script>
{% endblock %}
