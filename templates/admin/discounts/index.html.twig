{% extends 'base.html.twig' %}

{% block title %}Promotions & soldes{% endblock %}

{% block body %}
<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h4 mb-1">Promotions & soldes</h1>
            <p class="text-muted mb-0">
                Activez ou désactivez le mode promotions pour les vendeuses.
            </p>
            <p class="text-muted small mb-0">
                La remise <strong>-10&nbsp;% sur le panier entier</strong> reste toujours disponible.
            </p>
        </div>
        <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary btn-sm">
            ← Dashboard
        </a>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card border-0 shadow-sm">
        <div class="card-body d-flex flex-column flex-md-row align-items-md-center justify-content-between">
            <div class="mb-3 mb-md-0">
                <h2 class="h5 mb-1">Mode promotions</h2>
                <p class="mb-1">
                    {% if sale_mode.discountEnabled %}
                        <span class="badge bg-success">ACTIVÉ</span>
                    {% else %}
                        <span class="badge bg-danger">DÉSACTIVÉ</span>
                    {% endif %}
                </p>
                <p class="text-muted small mb-0">
                    Quand il est activé, les vendeuses peuvent appliquer des remises
                    prédéfinies (-10&nbsp;%, -20&nbsp;%, -30&nbsp;%, -40&nbsp;%, -50&nbsp;%) sur chaque article.
                </p>
            </div>

            <form method="post">
                <input type="hidden" name="_token" value="{{ csrf_token('toggle_sale_mode') }}">
                <input type="hidden" name="discount_enabled" value="{{ sale_mode.discountEnabled ? '0' : '1' }}">

                {% if sale_mode.discountEnabled %}
                    <button class="btn btn-danger btn-lg">
                        Désactiver le mode promotions
                    </button>
                {% else %}
                    <button class="btn btn-success btn-lg">
                        Activer le mode promotions
                    </button>
                {% endif %}
            </form>
        </div>
    </div>

</div>
{% endblock %}
