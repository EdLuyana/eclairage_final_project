<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Eclairage{% endblock %}</title>

        <meta name="viewport" content="width=device-width, initial-scale=1">

        {# Bootstrap CSS via CDN #}
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous"
        >

        {% block stylesheets %}{% endblock %}
    </head>
    <body class="bg-light">

        {# Zone de messages flash #}
        <div class="container mt-3">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} mb-2">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        {% block body %}{% endblock %}

        {# Bootstrap JS (si besoin plus tard) #}
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"
        ></script>

        {% block javascripts %}
            <script src="{{ asset('assets/js/core.js') }}"></script>
            <script src="{{ asset('assets/js/admin_reassort.js') }}"></script>
            <script src="{{ asset('assets/js/user_add_stock.js') }}"></script>
            <script src="{{ asset('assets/js/user_check_stock.js') }}"></script>
            <script src="{{ asset('assets/js/user_sell.js') }}"></script>
            <script src="{{ asset('assets/js/user_return.js') }}"></script>
        {% endblock %}
    </body>
</html>
